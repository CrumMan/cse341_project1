{
  "swagger": "2.0",
  "info": {
    "title": "Users API",
    "description": "Users API documentation for Render deployment",
    "version": "1.0.0"
  },
  "host": "cse341-project1-0dow.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/users": {
      "get": {
        "description": "Get all users",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Create a new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string", "example": "any" },
                "username": { "type": "string", "example": "any" },
                "name": { "type": "string", "example": "any" },
                "ipaddress": { "type": "string", "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "description": "Get user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "put": {
        "description": "Update user",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "type": "string" },
                "username": { "type": "string" },
                "name": { "type": "string" },
                "ipaddress": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete user",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}